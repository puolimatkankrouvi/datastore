extends base.pug

block content
  h Login
  p #{message}
  form(method='POST' action='/login')
    div.form-group
      label(for='username', text='#{username}') Username:
      input.form-control(type='text', name='username')
    div.form-group
      label(for='pw') Password:
      input.form-control(type='password', name='pw')
    button(type='submit', class='btn btn-default') Login