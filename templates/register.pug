extends base.pug

block content
  h Register
  p #{message}
  form(method='POST' action='/register')
    div.form-group
      label(for='username') Username:
      input.form-control(type='text', name='username', text='#{username}')
    div.form-group
      label(for='pw') Password:
      input.form-control(type='password', name='pw')
    div.form-group
      label(for='read_attr') Can read data
      input.form-control(type='checkbox', name='read_attr')
    div.form-group
      label(for='rem_attr') Can remove data
      input.form-control(type='checkbox', name='rem_attr')
    div.form-group
      label(for='create_attr') Can create data
      input.form-control(type='checkbox', name='create_attr')
    div.form-group
      label(for='update_attr') Can update data
      input.form-control(type='checkbox', name='update_attr')
    button(type='submit', class='btn btn-default') Create Account